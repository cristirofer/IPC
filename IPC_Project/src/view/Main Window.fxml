            <HBox alignment="TOP_RIGHT" prefHeight="124.0" prefWidth="674.0">
               <children>
                  <ImageView fitHeight="72.0" fitWidth="383.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/title.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="30.0" top="10.0" />
                     </HBox.margin>
