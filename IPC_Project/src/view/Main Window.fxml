                  <Insets right="10.0" />
               </opaqueInsets>
            </HBox>
            <Label prefHeight="42.0" prefWidth="90.0" textFill="#2d752f">
               <font>
                  <Font name="Niagara Solid" size="45.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="46.0" fitWidth="259.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/74f0a74939256fd792b17834fab54353.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Button fx:id="logInButton" mnemonicParsing="false" onMouseClicked="#logInClicked" style="-fx-background-color: #adf7af;" text="Login" textFill="#2d752f">
